    </servlet>

    <servlet-mapping>
        <servlet-name>showMyCart</servlet-name>
        <url-pattern>/showMyCart</url-pattern>
    </servlet-mapping>



    <servlet>
        <description>This is the description of my J2EE component</description>
        <display-name>This is the display name of my J2EE component</display-name>
        <servlet-name>BuyBookCl</servlet-name>
        <servlet-class>com.dy.control.BuyBookCl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BuyBookCl</servlet-name>
        <url-pattern>/BuyBookCl</url-pattern>
    </servlet-mapping>
</web-app>